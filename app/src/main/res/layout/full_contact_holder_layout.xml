<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_contact_holder_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical|center"
    android:clickable="true"
    android:background="@color/LightGrey"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="false"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/full_contact_holder_left_layout"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:clickable="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/full_contact_holder_iv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:padding="4dp"
                android:src="@drawable/default_profile" />

        </LinearLayout>

        <ScrollView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false">

            <LinearLayout
                android:id="@+id/full_contact_holder_right_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/full_contact_holder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Name: "
                    android:gravity="start"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    />

                <TextView
                    android:id="@+id/full_contact_holder_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="start"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="Phone: "
                    />

                <TextView
                    android:id="@+id/full_contact_holder_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="start"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="Email: " />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</RelativeLayout>